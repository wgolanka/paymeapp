<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_your_debtors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_debtors"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <ListView
        android:id="@+id/listView_debtors"
        android:layout_width="349dp"
        android:layout_height="415dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_your_debtors" />

    <Button
        android:id="@+id/button_add_debtor"
        android:layout_width="91dp"
        android:layout_height="58dp"
        android:text="@string/add_new_debtor_button"
        app:layout_constraintBottom_toTopOf="@+id/listView_debtors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_your_debtors"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_debt_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debt_sum_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView_debtors"
        app:layout_constraintVertical_bias="0.493" />

    <EditText
        android:id="@+id/num_debt_sum"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/sum_of_debts_desc"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_debt_sum"
        app:layout_constraintTop_toBottomOf="@+id/listView_debtors"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/textView_no_debtors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hooray! No debtors:)"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/listView_debtors"
        app:layout_constraintEnd_toStartOf="@+id/button_add_debtor"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_your_debtors"
        app:layout_constraintVertical_bias="0.523" />
</androidx.constraintlayout.widget.ConstraintLayout>